{
  "name": "litigant-portal",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "./dev.sh",
    "build:css": "npx tailwindcss -i static/css/main.css -o static/css/main.built.css --minify",
    "watch:css": "npx tailwindcss -i static/css/main.css -o static/css/main.built.css --watch",
    "format": "prettier --write 'static/**/*.js' 'static/**/*.css' '*.config.js' '*.json' '*.md' 'docs/**/*.md'",
    "format:check": "prettier --check 'static/**/*.js' 'static/**/*.css' '*.config.js' '*.json' '*.md' 'docs/**/*.md'"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "concurrently": "^9.2.1",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.17"
  }
}
