{
  "name": "litigant-portal",
  "version": "0.0.1",
  "private": true,
  "description": "Access to Justice Portal - Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'frontend/src/**/*.{ts,js}'",
    "lint:fix": "eslint 'frontend/src/**/*.{ts,js}' --fix",
