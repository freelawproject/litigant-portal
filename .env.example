# Litigant Portal Environment Variables
# Copy to .env and configure for your environment

# Django Settings
# ----------------
# Generate a unique key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# Set to false in production
DEBUG=true

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# --------
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://litigant:litigant@localhost:5432/litigant_portal

# Individual PostgreSQL settings (used by docker-compose)
POSTGRES_USER=litigant
POSTGRES_PASSWORD=litigant
POSTGRES_DB=litigant_portal

# Gunicorn (Production)
# ---------------------
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=30
